# 学习平台知识图谱系统 - 环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# =============================================================================
# 基础配置
# =============================================================================
APP_NAME=学习平台知识图谱系统
VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# =============================================================================
# 数据库配置
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/knowledge_graph
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# =============================================================================
# CORS配置
# =============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=data/uploads
ALLOWED_EXTENSIONS=.pdf,.docx,.txt,.md,.png,.jpg,.jpeg
MAX_FILES_PER_UPLOAD=10

# =============================================================================
# 支持的文档格式
# =============================================================================
SUPPORTED_EXTENSIONS=[".pdf", ".docx", ".txt", ".md"]

# =============================================================================
# DeepSeek API配置（可选，用于AI功能）
# =============================================================================
DEEPSEEK_API_KEY=sk-82b6af693e4643d6a596f598aabbc983
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# =============================================================================
# Celery配置
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai
CELERY_ENABLE_UTC=true

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 知识图谱配置
# =============================================================================
KNOWLEDGE_GRAPH_BATCH_SIZE=100
MAX_EXTRACTION_DEPTH=3
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# CodeBuddy Agent Teams 配置
# =============================================================================
CODEBUDDY_CODE_EXPERIMENTAL_AGENT_TEAMS=1