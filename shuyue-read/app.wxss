/* app.wxss */

/* 全局样式变量 - 主题页风格统一 */
page {
  /* 色彩体系 */
  --primary-gradient: linear-gradient(135deg, #5A4B99 0%, #2E3BFF 100%);
  --primary-color: #2E3BFF;
  --primary-blue: #2E3BFF;
  --secondary-color: #5A4B99;
  
  /* 背景色 */
  --bg-color: #F5F7FA;
  --bg-card: #FFFFFF;
  --bg-glass: rgba(255, 255, 255, 0.85);
  
  /* 文字色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --text-white: #FFFFFF;
  
  /* 边框和阴影 */
  --border-color: #E5E5E5;
  --white: #FFFFFF;
  --shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-light: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  
  /* 圆角 */
  --radius-sm: 16rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-pill: 999rpx;
  
  /* 尺寸 */
  --margin-page: 32rpx;
  --margin-module: 32rpx;
  --padding-card: 32rpx;
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 32rpx;
  color: var(--text-primary);
  line-height: 1.6;
}

/* ==================== 字体层级（全局统一）==================== */
.text-h1 {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.3;
}

.text-h2 {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1.4;
}

.text-h3 {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.4;
}

.text-body {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.6;
}

.text-small {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 1.5;
}

.text-btn {
  font-size: 32rpx;
  font-weight: 600;
}

/* ==================== 通用容器 ==================== */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* ==================== 通用卡片 ==================== */
.card {
  background-color: var(--bg-card);
  border-radius: var(--radius-md);
  box-shadow: var(--shadow);
  padding: var(--padding-card);
  margin: var(--margin-page);
}

/* ==================== 通用按钮 ==================== */
.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
  border-radius: var(--radius-md);
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border: none;
  box-shadow: var(--shadow);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: var(--bg-card);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: var(--radius-md);
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
}

.btn-secondary:active {
  background-color: rgba(46, 59, 255, 0.05);
}

/* ==================== 通用标题 ==================== */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* ==================== 通用文本 ==================== */
.text-secondary {
  color: var(--text-secondary);
  font-size: 28rpx;
}

.text-tertiary {
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* ==================== 标签样式 ==================== */
.tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: var(--radius-sm);
  background-color: #F3F4F6;
  color: var(--text-secondary);
}

.tag-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
}

/* ==================== 通用间距 ==================== */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mt-32 { margin-top: 32rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mb-32 { margin-bottom: 32rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }

.mx-32 {
  margin-left: 32rpx;
  margin-right: 32rpx;
}

.my-32 {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.p-32 { padding: 32rpx; }
.px-32 {
  padding-left: 32rpx;
  padding-right: 32rpx;
}

/* ==================== 通用flex ==================== */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* ==================== 通用骨架屏 ==================== */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

/* ==================== 加载更多 ==================== */
.loading-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* ==================== 毛玻璃效果 ==================== */
.glass {
  background: var(--bg-glass);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* ==================== 头部渐变区域 ==================== */
.header-gradient {
  background: var(--primary-gradient);
  padding: 40rpx 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-white);
  text-align: center;
}

/* ==================== 隐藏滚动条 ==================== */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
