/* app.wxss */

/* 全局样式变量 */
page {
  --primary-color: #4A90E2;
  --secondary-color: #5BA3F0;
  --bg-color: #F5F7FA;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #E5E5E5;
  --white: #FFFFFF;
  --shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 4rpx 20rpx rgba(0, 0, 0, 0.12);
  
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
}

/* 通用容器 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 通用卡片 */
.card {
  background-color: var(--white);
  border-radius: 16rpx;
  box-shadow: var(--shadow);
  padding: 24rpx;
  margin: 20rpx;
}

/* 通用按钮 */
.btn-primary {
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 44rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.btn-primary:active {
  background-color: #3A7BC8;
}

.btn-secondary {
  background-color: var(--white);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 44rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  text-align: center;
}

/* 通用标题 */
.title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.title-small {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 通用文本 */
.text-secondary {
  color: var(--text-secondary);
  font-size: 24rpx;
}

.text-tertiary {
  color: var(--text-tertiary);
  font-size: 22rpx;
}

/* 通用间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }

/* 通用flex */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 通用骨架屏 */
.skeleton {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}
