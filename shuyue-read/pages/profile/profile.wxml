<!--pages/profile/profile.wxml-->
<view class="container">
  <!-- 用户信息 -->
  <view class="user-section">
    <view class="user-info" wx:if="{{userInfo}}">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      <text class="nickname">{{userInfo.nickName}}</text>
    </view>
    <view class="user-login" wx:else>
      <button class="btn-login" bindtap="login">微信授权登录</button>
    </view>
  </view>

  <!-- 统计信息 -->
  <view class="stats-section">
    <view class="stat-item">
      <text class="stat-num">{{stats.favoriteCount}}</text>
      <text class="stat-label">收藏</text>
    </view>
    <view class="stat-item">
      <text class="stat-num">{{stats.readCount}}</text>
      <text class="stat-label">阅读</text>
    </view>
    <view class="stat-item">
      <text class="stat-num">{{stats.readingTime}}</text>
      <text class="stat-label">时长(分钟)</text>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="menu-section">
    <view class="menu-item" bindtap="goToBookshelf">
      <image class="menu-icon" src="/assets/icons/book.png" mode="aspectFit"></image>
      <text class="menu-text">我的书架</text>
      <image class="menu-arrow" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item" bindtap="goToHistory">
      <image class="menu-icon" src="/assets/icons/history.png" mode="aspectFit"></image>
      <text class="menu-text">阅读历史</text>
      <image class="menu-arrow" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item">
      <image class="menu-icon" src="/assets/icons/favorite.png" mode="aspectFit"></image>
      <text class="menu-text">我的收藏</text>
      <image class="menu-arrow" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 其他设置 -->
  <view class="menu-section">
    <view class="menu-item">
      <image class="menu-icon" src="/assets/icons/setting.png" mode="aspectFit"></image>
      <text class="menu-text">设置</text>
      <image class="menu-arrow" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view>
    
    <view class="menu-item">
      <image class="menu-icon" src="/assets/icons/about.png" mode="aspectFit"></image>
      <text class="menu-text">关于我们</text>
      <image class="menu-arrow" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view>
  </view>
</view>
