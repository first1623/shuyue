/* 主题订阅页面样式 */
.theme-subscription-page {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  flex-shrink: 0;
}

/* ==================== 上半部分 ==================== */
.upper-section {
  width: 100%;
  height: 60%;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 渐变背景 */
.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #6366F1 0%, #4F46E5 30%, #3730A3 70%, #312E81 100%);
  z-index: 0;
}

/* 科技感网格纹理 */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(rgba(255,255,255,0.03) 1px, transparent 1px),
    linear-gradient(90deg, rgba(255,255,255,0.03) 1px, transparent 1px);
  background-size: 40rpx 40rpx;
  z-index: 1;
}

/* 无线信号波纹 */
.ripple-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 600rpx;
  z-index: 2;
}

.ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid rgba(147, 197, 253, 0.3);
  border-radius: 50%;
}

.ripple-1 {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.8;
}

.ripple-2 {
  width: 320rpx;
  height: 320rpx;
  opacity: 0.6;
}

.ripple-3 {
  width: 440rpx;
  height: 440rpx;
  opacity: 0.4;
}

.ripple-4 {
  width: 560rpx;
  height: 560rpx;
  opacity: 0.2;
}

/* 顶部标签 */
.top-badge {
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(167, 139, 250, 0.4);
  backdrop-filter: blur(10rpx);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  z-index: 10;
  border: 1rpx solid rgba(255,255,255,0.2);
}

.badge-text {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 600;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 关闭按钮 */
.close-btn {
  position: absolute;
  top: 70rpx;
  right: 40rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  backdrop-filter: blur(10rpx);
}

.close-icon {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 300;
  line-height: 1;
}

/* 漂浮主题容器 */
.floating-themes-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 5;
}

/* 漂浮主题项 */
.theme-float-item {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: float 3s ease-in-out infinite;
  transition: all 0.3s ease;
}

.theme-float-item.selected {
  transform: scale(1.2);
  z-index: 20;
}

.theme-float-item.selected .theme-icon-wrapper {
  box-shadow: 0 0 30rpx rgba(255,255,255,0.6), 0 0 60rpx rgba(255,255,255,0.3);
  border: 3rpx solid #FFFFFF;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-15rpx); }
}

/* 位置定义 */
.theme-float-item.position-0 { top: 120rpx; left: 80rpx; }
.theme-float-item.position-1 { top: 180rpx; right: 100rpx; }
.theme-float-item.position-2 { top: 280rpx; left: 50rpx; }
.theme-float-item.position-3 { top: 240rpx; right: 60rpx; }
.theme-float-item.position-4 { top: 360rpx; left: 120rpx; }
.theme-float-item.position-5 { top: 400rpx; right: 80rpx; }
.theme-float-item.position-6 { top: 480rpx; left: 60rpx; }
.theme-float-item.position-7 { top: 520rpx; right: 100rpx; }

/* 图标包装 */
.theme-icon-wrapper {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.theme-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.theme-icon-emoji {
  font-size: 44rpx;
  line-height: 1;
}

.icon-emoji-small {
  font-size: 36rpx;
  line-height: 1;
}

.icon-emoji-large {
  font-size: 56rpx;
  line-height: 1;
}

.theme-name-float {
  margin-top: 8rpx;
  font-size: 20rpx;
  color: rgba(255,255,255,0.9);
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

/* 中央WiFi信号 */
.center-signal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 3;
  margin-top: -40rpx;
}

.signal-circle {
  width: 160rpx;
  height: 160rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.2);
}

/* WiFi图标 */
.wifi-icon {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.wifi-arc {
  position: absolute;
  border: 6rpx solid #4F46E5;
  border-bottom: none;
  border-left: none;
  border-right: none;
  border-radius: 50% 50% 0 0;
}

.wifi-arc-1 {
  width: 72rpx;
  height: 36rpx;
  top: 0;
}

.wifi-arc-2 {
  width: 52rpx;
  height: 26rpx;
  top: 16rpx;
}

.wifi-arc-3 {
  width: 32rpx;
  height: 16rpx;
  top: 32rpx;
}

.wifi-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4F46E5;
  border-radius: 50%;
  margin-bottom: 4rpx;
}

/* 核心文案 */
.main-text {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 10;
  padding: 0 60rpx;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2);
}

.sub-title {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  line-height: 1.5;
  font-weight: 400;
}

/* ==================== 下半部分 ==================== */
.lower-section {
  width: 100%;
  height: 40%;
  background: rgba(255,255,255,0.85);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
  z-index: 20;
  margin-top: -32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0,0,0,0.1);
}

/* 卡片容器 */
.cards-container {
  width: 100%;
  height: 420rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 半张卡片 */
.half-card {
  position: absolute;
  width: 160rpx;
  height: 300rpx;
  border-radius: 16rpx;
  opacity: 0.6;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.half-card.left-half {
  left: -80rpx;
}

.half-card.right-half {
  right: -80rpx;
}

.half-card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.theme-icon-small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.theme-icon-small image {
  width: 36rpx;
  height: 36rpx;
  filter: brightness(0) invert(1);
}

.theme-icon-small .icon-emoji-small {
  font-size: 36rpx;
  line-height: 1;
}

.half-card-name {
  font-size: 22rpx;
  color: #333;
  font-weight: 600;
  writing-mode: vertical-rl;
  text-orientation: mixed;
}

/* Swiper轮播 */
.theme-swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx;
}

/* 主题卡片 */
.theme-card {
  width: 560rpx;
  height: 360rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.theme-icon-large {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.theme-icon-large image {
  width: 56rpx;
  height: 56rpx;
  filter: brightness(0) invert(1);
}

.theme-icon-large .icon-emoji-large {
  font-size: 56rpx;
  line-height: 1;
}

.theme-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.theme-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 12rpx;
}

.theme-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

/* 卡片中部 */
.card-body {
  flex: 1;
  margin-bottom: 24rpx;
}

.theme-desc {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: flex-end;
}

.subscribe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
  transition: all 0.3s ease;
}

.subscribe-btn.subscribed {
  background: #D1D5DB !important;
  box-shadow: none;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.btn-arrow {
  font-size: 28rpx;
  color: #FFFFFF;
  margin-left: 12rpx;
  font-weight: 600;
}

/* 剩余提示 */
.more-hint {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

.more-text {
  font-size: 22rpx;
  color: #9CA3AF;
  font-weight: 500;
}

/* 指示器 */
.indicators {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.dot.active {
  width: 40rpx;
  border-radius: 8rpx;
}