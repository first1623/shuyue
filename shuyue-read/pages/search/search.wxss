/* pages/search/search.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: var(--white);
  padding: 20rpx 30rpx;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F5F7FA;
  border-radius: 40rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-clear image {
  width: 28rpx;
  height: 28rpx;
}

.cancel-btn {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 结果列表 */
.result-section {
  padding: 20rpx;
}

.loading-state {
  text-align: center;
  padding: 60rpx;
  color: var(--text-tertiary);
}

.result-list {
  display: flex;
  flex-direction: column;
}

.result-item {
  display: flex;
  background-color: var(--white);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.result-cover {
  width: 140rpx;
  height: 190rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.result-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.result-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.result-author {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.result-desc {
  font-size: 22rpx;
  color: var(--text-tertiary);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

.empty-hint {
  margin-top: 10rpx;
  font-size: 24rpx;
}

/* 热门搜索 */
.hot-section {
  padding: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.hot-tags {
  display: flex;
  flex-wrap: wrap;
}

.hot-tag {
  padding: 12rpx 28rpx;
  background-color: var(--white);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
