/* pages/index/index.wxss */

/* ==================== 头部区域 ==================== */
/* 头部区域 - 紫蓝渐变背景 */
.search-bar {
  background: var(--primary-gradient);
  padding: 20rpx 32rpx 40rpx;
}

/* 搜索框 - 白色胶囊 */
.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--bg-card);
  border-radius: 999rpx;
  padding: 20rpx 32rpx;
  box-shadow: var(--shadow);
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

/* ==================== 栏目导航 ==================== */
.category-nav {
  background-color: var(--bg-card);
  box-shadow: var(--shadow);
  position: sticky;
  top: 0;
  z-index: 100;
}

/* 横向可滑动 */
.category-scroll {
  white-space: nowrap;
  padding: 0 32rpx;
  height: 96rpx;
}

/* 分类标签 - 胶囊形态 */
.category-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin: 16rpx 8rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  background-color: #F3F4F6;
  border-radius: 16rpx;
  transition: all 0.3s;
}

/* 选中状态 - 主色背景+白字 */
.category-item.active {
  background: var(--primary-gradient);
  color: var(--text-white);
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(46, 59, 255, 0.3);
}

/* ==================== PDF列表区域 ==================== */
.pdf-list {
  height: calc(100vh - 96rpx - 100rpx);
  padding: 32rpx;
  box-sizing: border-box;
}

/* ==================== 骨架屏 ==================== */
.skeleton-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.skeleton-card {
  width: calc(50% - 16rpx);
  background-color: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.skeleton-cover {
  width: 100%;
  height: 280rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

.skeleton-title {
  height: 32rpx;
  width: 80%;
  margin: 20rpx auto 10rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-info {
  height: 24rpx;
  width: 50%;
  margin: 0 auto;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ==================== PDF卡片 ==================== */
.pdf-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 卡片 - 白底24rpx圆角阴影 */
.pdf-card {
  width: calc(50% - 16rpx);
  background-color: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 32rpx;
  box-shadow: var(--shadow);
  transition: transform 0.3s, box-shadow 0.3s;
}

.pdf-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-lg);
}

/* 封面图 - 充满宽度16rpx圆角 */
.pdf-cover {
  width: 100%;
  height: 280rpx;
  background-color: #f0f0f0;
  border-radius: 16rpx;
  margin: 16rpx 16rpx 0 16rpx;
  width: calc(100% - 32rpx);
}

.pdf-info {
  padding: 24rpx;
}

/* 标题 - 36rpx粗体 */
.pdf-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 12rpx;
}

/* 作者/页数 - 28rpx灰色 */
.pdf-author {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.pdf-pages {
  display: block;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* ==================== 加载更多 ==================== */
.loading-more {
  text-align: center;
  padding: 40rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* ==================== 数据库错误状态 ==================== */
.db-error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.error-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.error-steps {
  background-color: #FFF8E7;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  text-align: left;
  width: 100%;
}

.step-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: block;
}

.step {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  display: block;
}

.step-item {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  display: block;
}

.btn-retry {
  background: var(--primary-gradient);
  color: var(--text-white);
  padding: 24rpx 80rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  box-shadow: var(--shadow);
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

.debug-btn {
  background: var(--primary-gradient);
  color: var(--text-white);
  padding: 20rpx 60rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  margin-top: 40rpx;
}
