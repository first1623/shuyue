/* pages/index/index.wxss */

/* 搜索栏 */
.search-bar {
  background-color: var(--primary-color);
  padding: 20rpx 30rpx 30rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 16rpx 30rpx;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  color: var(--text-tertiary);
  font-size: 28rpx;
}

/* 栏目导航 */
.category-nav {
  background-color: var(--white);
  box-shadow: var(--shadow);
  position: sticky;
  top: 0;
  z-index: 100;
}

.category-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
  height: 88rpx;
}

.category-item {
  display: inline-block;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  position: relative;
  transition: color 0.3s;
}

.category-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.category-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

/* PDF列表 */
.pdf-list {
  height: calc(100vh - 88rpx - 88rpx - 80rpx);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 骨架屏 */
.skeleton-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.skeleton-card {
  width: 48%;
  background-color: var(--white);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}

.skeleton-cover {
  width: 100%;
  height: 280rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
}

.skeleton-title {
  height: 32rpx;
  width: 80%;
  margin: 20rpx auto 10rpx;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

.skeleton-info {
  height: 24rpx;
  width: 50%;
  margin: 0 auto;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 4rpx;
}

/* PDF卡片 */
.pdf-cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.pdf-card {
  width: 48%;
  background-color: var(--white);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow);
  transition: transform 0.3s, box-shadow 0.3s;
}

.pdf-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-lg);
}

.pdf-cover {
  width: 100%;
  height: 280rpx;
  background-color: #f0f0f0;
}

.pdf-info {
  padding: 16rpx 20rpx;
}

.pdf-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.pdf-author {
  display: block;
  font-size: 24rpx;
  color: var(--text-secondary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.pdf-pages {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
}

/* 数据库错误状态 */
.db-error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.error-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.error-steps {
  background-color: #FFF8E7;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  text-align: left;
  width: 100%;
}

.step-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  display: block;
}

.step {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
  display: block;
}

.step-item {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-left: 20rpx;
  margin-bottom: 8rpx;
  display: block;
}

.btn-retry {
  background-color: var(--primary-color);
  color: var(--white);
  padding: 20rpx 60rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
}
