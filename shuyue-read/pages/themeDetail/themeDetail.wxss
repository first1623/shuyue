/** 主题详情页样式 */

/* 全局主题色，与【主题页】保持一致 */
page {
  --primary-gradient: linear-gradient(135deg, #5A4B99 0%, #2E3BFF 100%);
  --primary-blue: #2E3BFF;
  --bg-card: #FFFFFF;
  --bg-glass: rgba(255, 255, 255, 0.8);
  --text-primary: #333333;
  --text-secondary: #999999;
  --text-white: #FFFFFF;
  --shadow-light: 0 4px 8px rgba(0, 0, 0, 0.1);
  --radius-sm: 8rpx;
  --radius-md: 24rpx;
  --radius-lg: 32rpx;
  --radius-full: 999rpx;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  background-color: #F5F7FA;
}

/* 全局字体层级 */
.h1 {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
}
.h2 {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}
.h3 {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}
.body {
  font-size: 32rpx;
  font-weight: 400;
  color: var(--text-primary);
}
.caption {
  font-size: 28rpx;
  font-weight: 400;
  color: var(--text-secondary);
}

/* 页面主容器 */
.theme-detail-page {
  width: 100vw;
  height: 100vh;
  background: #F5F7FA;
  display: flex;
  flex-direction: column;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  flex-shrink: 0;
}

/* 自定义导航栏 */
.custom-nav {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 100;
}

.nav-left, .nav-right {
  width: 80rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 300;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.nav-share {
  font-size: 36rpx;
  color: #FFFFFF;
}

/* 页面内容滚动区 */
.page-content {
  flex: 1;
  overflow-y: auto;
}

/* ==================== 第一区域：主题头部区 ==================== */
.theme-header {
  width: 100%;
  height: 420rpx;
  position: relative;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.header-content {
  position: relative;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 40rpx;
}

.theme-icon-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.2);
}

.icon-emoji {
  font-size: 60rpx;
}

.theme-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.theme-subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 32rpx;
  max-width: 80%;
  line-height: 1.4;
}

.subscribe-btn {
  padding: 20rpx 56rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.subscribe-btn.subscribed {
  opacity: 0.8;
}

.subscribe-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* ==================== 卡片区域通用样式 ==================== */
.section-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.section-more {
  font-size: 24rpx;
  color: #6B7280;
}

/* ==================== 第二区域：专家团队区 ==================== */
.experts-scroll {
  width: 100%;
  white-space: nowrap;
}

.experts-list {
  display: flex;
  padding: 8rpx 0;
}

.expert-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
  min-width: 120rpx;
}

.expert-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  border: 3rpx solid #FFFFFF;
}

.expert-name {
  font-size: 26rpx;
  color: #374151;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.expert-title {
  font-size: 22rpx;
  color: #9CA3AF;
}

/* ==================== 第三区域：智库报告区 ==================== */
.reports-scroll {
  width: 100%;
  white-space: nowrap;
}

.reports-list {
  display: flex;
  padding: 8rpx 0;
}

.report-card {
  width: 520rpx;
  height: 280rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.report-header {
  display: flex;
  align-items: flex-start;
}

.report-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.icon-emoji-small {
  font-size: 40rpx;
}

.report-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.report-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
  line-height: 1.3;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.report-meta {
  font-size: 22rpx;
  color: #9CA3AF;
}

.report-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #F3F4F6;
}

.report-pages {
  font-size: 24rpx;
  color: #6B7280;
}

.report-type {
  font-size: 22rpx;
  color: #FFFFFF;
  background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* ==================== 第四区域：数据指标区 ==================== */
.time-filter {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #F3F4F6;
  border-radius: 24rpx;
}

.filter-text {
  font-size: 24rpx;
  color: #4B5563;
  margin-right: 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #6B7280;
}

/* 关键指标网格 */
.metrics-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.metric-card {
  flex: 1;
  padding: 28rpx 20rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.metric-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 8rpx;
}

.metric-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.9);
  margin-bottom: 12rpx;
}

.metric-trend {
  display: flex;
  align-items: center;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.3);
}

.metric-trend.up {
  background: rgba(16, 185, 129, 0.3);
}

.metric-trend.down {
  background: rgba(239, 68, 68, 0.3);
}

.trend-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.trend-value {
  font-size: 22rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* 图表区域 */
.chart-container {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.chart-title {
  font-size: 26rpx;
  color: #4B5563;
  margin-bottom: 20rpx;
  display: block;
}

.chart-placeholder {
  height: 240rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.chart-bars {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  width: 100%;
  height: 100%;
  gap: 20rpx;
}

.chart-bar {
  flex: 1;
  min-width: 60rpx;
  max-width: 80rpx;
  border-radius: 8rpx 8rpx 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 12rpx;
  position: relative;
}

.bar-value {
  position: absolute;
  bottom: -32rpx;
  font-size: 20rpx;
  color: #6B7280;
}

/* 查看全部按钮 */
.view-all-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%);
  border-radius: 12rpx;
  margin-top: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-right: 12rpx;
}

.btn-arrow {
  font-size: 28rpx;
  color: #FFFFFF;
}

/* 底部间距 */
.bottom-space {
  height: 40rpx;
}

/* ==================== 筛选弹窗 ==================== */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-popup.show {
  opacity: 1;
  visibility: visible;
}

.popup-content {
  width: 100%;
  background: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-popup.show .popup-content {
  transform: translateY(0);
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.popup-close {
  font-size: 40rpx;
  color: #9CA3AF;
  padding: 8rpx;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.filter-option {
  padding: 28rpx 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F9FAFB;
  transition: all 0.2s ease;
}

.filter-option.active {
  background: #EEF2FF;
  font-weight: 600;
}

.check-icon {
  font-size: 28rpx;
}