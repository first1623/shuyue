/* pages/bookshelf/bookshelf.wxss */

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
}

/* 区块 */
.section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-count {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 横向滚动书籍列表 */
.book-scroll {
  white-space: nowrap;
  height: 320rpx;
  padding: 10rpx 0;
}

.book-item {
  display: inline-block;
  width: 180rpx;
  margin-right: 20rpx;
  vertical-align: top;
  position: relative;
}

.book-item:first-child {
  margin-left: 10rpx;
}

.book-cover {
  width: 180rpx;
  height: 240rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  box-shadow: var(--shadow);
}

.book-title {
  display: block;
  font-size: 24rpx;
  color: var(--text-primary);
  margin-top: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  display: block;
  font-size: 22rpx;
  color: var(--text-tertiary);
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-progress {
  display: block;
  font-size: 20rpx;
  color: var(--primary-color);
  margin-top: 4rpx;
}

.book-remove {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-remove image {
  width: 24rpx;
  height: 24rpx;
}

/* 阅读历史 */
.history-list {
  background-color: var(--white);
  border-radius: 16rpx;
  overflow: hidden;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-item:last-child {
  border-bottom: none;
}

.history-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.history-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 22rpx;
  color: var(--text-tertiary);
}

.history-badge {
  padding: 10rpx 24rpx;
  background-color: var(--primary-color);
  color: var(--white);
  border-radius: 30rpx;
  font-size: 22rpx;
  flex-shrink: 0;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 28rpx;
  margin-top: 20rpx;
}

.mt-20 {
  margin-top: 20rpx;
}
