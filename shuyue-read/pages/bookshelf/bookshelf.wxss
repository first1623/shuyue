/* pages/bookshelf/bookshelf.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
  padding: 32rpx;
}

/* ==================== 区块 ==================== */
.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 24rpx;
}

/* 区块标题：粗体小标题 */
.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-count {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

/* ==================== 横向滚动书籍列表 ==================== */
/* 横向 scroll-view + 显示半张卡片提示可滑 */
.book-scroll {
  white-space: nowrap;
  height: 360rpx;
  padding: 10rpx 0;
}

.book-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 24rpx;
  vertical-align: top;
  position: relative;
}

.book-item:first-child {
  margin-left: 0;
}

/* 最后一个item显示半张提示可滑 */
.book-item:last-child {
  margin-right: 100rpx;
}

/* 书籍封面 - 24rpx圆角阴影 */
.book-cover {
  width: 200rpx;
  height: 260rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
  box-shadow: var(--shadow);
}

.book-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-top: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-author {
  display: block;
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book-progress {
  display: block;
  font-size: 22rpx;
  color: var(--primary-color);
  margin-top: 8rpx;
  font-weight: 500;
}

/* 删除按钮 */
.book-remove {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 44rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-remove image {
  width: 24rpx;
  height: 24rpx;
}

/* ==================== 阅读历史列表 ==================== */
/* 统一卡片：白底 + 24rpx圆角 */
.history-list {
  background-color: var(--bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow);
}

.history-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.history-item:last-child {
  border-bottom: none;
}

/* 封面 - 16rpx圆角 */
.history-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
  box-shadow: var(--shadow-light);
}

.history-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 标题：正文级别 */
.history-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.history-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 继续阅读标签 - 主色胶囊 */
.history-badge {
  padding: 12rpx 28rpx;
  background: var(--primary-gradient);
  color: var(--text-white);
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(46, 59, 255, 0.3);
}

/* ==================== 加载状态 ==================== */
.loading-state {
  text-align: center;
  padding: 80rpx;
  color: var(--text-tertiary);
  font-size: 28rpx;
}

/* ==================== 空状态 ==================== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 32rpx;
}

.empty-state text {
  color: var(--text-tertiary);
  font-size: 30rpx;
}

/* 去首页按钮 */
.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-white);
  padding: 24rpx 60rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: var(--shadow);
}

.mt-20 {
  margin-top: 32rpx;
}
