/* pages/detail/detail.wxss */

.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  color: var(--text-tertiary);
}

.detail-content {
  padding-bottom: 120rpx;
}

/* 封面区域 */
.cover-section {
  background: linear-gradient(180deg, var(--primary-color) 0%, var(--bg-color) 100%);
  padding: 40rpx 0 60rpx;
  display: flex;
  justify-content: center;
}

.cover-image {
  width: 280rpx;
  height: 380rpx;
  border-radius: 12rpx;
  box-shadow: var(--shadow-lg);
  background-color: var(--white);
}

/* 基本信息 */
.info-section {
  background-color: var(--white);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.book-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.book-author {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.book-meta {
  display: flex;
  align-items: center;
}

.meta-item {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-right: 30rpx;
}

/* 简介 */
.desc-section {
  background-color: var(--white);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.book-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
  text-align: justify;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx 30rpx;
  background-color: var(--white);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-favorite {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--white);
  border: 2rpx solid var(--primary-color);
  border-radius: 44rpx;
  padding: 20rpx 0;
  margin-right: 20rpx;
}

.btn-favorite .heart-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.btn-favorite text {
  color: var(--primary-color);
  font-size: 28rpx;
}

.btn-favorite.active {
  background-color: #FFF0F0;
  border-color: #FF6B6B;
}

.btn-favorite.active text {
  color: #FF6B6B;
}

.btn-read {
  flex: 2;
  background-color: var(--primary-color);
  border-radius: 44rpx;
  padding: 20rpx 0;
  text-align: center;
}

.btn-read text {
  color: var(--white);
  font-size: 28rpx;
  font-weight: 500;
}

/* 试读 */
.preview-section {
  background-color: var(--white);
  padding: 30rpx;
}

.preview-scroll {
  white-space: nowrap;
  height: 400rpx;
}

.preview-image {
  display: inline-block;
  width: 280rpx;
  height: 380rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #f0f0f0;
}

/* 翻页预览提示 */
.preview-notice {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
}

.notice-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 16rpx;
}

.notice-text {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 30rpx;
}

.btn-preview {
  background-color: #fff;
  color: #667eea;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}
